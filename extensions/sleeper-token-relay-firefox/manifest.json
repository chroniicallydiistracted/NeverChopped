{
  "manifest_version": 2,
  "name": "Sleeper Token Relay (Firefox)",
  "version": "1.0.0",
  "description": "Reads Sleeper session cookie and opens the app with a token parameter.",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "https://sleeper.com/*",
    "https://*.sleeper.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Send Token to App"
  },
  "applications": {
    "gecko": {
      "id": "sleeper-token-relay@example.com",
      "strict_min_version": "91.0"
    }
  }
}
